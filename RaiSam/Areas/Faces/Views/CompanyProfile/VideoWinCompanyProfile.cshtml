@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoCompanyProfile()")
          .Height(565)
         .Width(1000)
             .ID("VideoCompanyProfile")
        .Closable(true)
            .Title("راهنمای تصویری تکمیل ثبت نام")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoCompanyProfile" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoCompanyProfile", "CompanyProfile", new { Areas = "Faces" })' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoCompanyProfile() {
        $('#AmozeshVideoCompanyProfile')[0].pause();
    }

</script>
