            success: function (data) {
                Ext.net.Mask.hide();
            }
        });
    }

    function ExitLogon() {
        window.location.href = '@Url.Content("~/Account/Logon")'
    }


    function EnterNext() {
        var keyfield = App.ForgetPass.queryById(Ext.getCmp((Ext.Element.getActiveElement()).name).itemId);
        var nextfld = keyfield.nextSibling();
        nextfld.focus();
        nextfld.selectText();

    }
