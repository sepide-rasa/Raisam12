@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoFristRegister()")
          .Height(565)
         .Width(1000)
             .ID("VideoFristRegister")
        .Closable(true)
            .Title("راهنمای تصویری پیش ثبت نام")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoFristRegister" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoFristRegister", "FristRegister", new { Areas = "Faces" })' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoFristRegister() {
        $('#AmozeshVideoFristRegister')[0].pause();
    }

</script>
