@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoContact()")
          .Height(565)
         .Width(1000)
                 .ID("VideoContact")
        .Closable(true)
            .Title("راهنمای تصویری تماس ها")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoContact" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoContact", "Contact")' type="vi type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoContact() {
        $('#AmozeshVideoContact')[0].pause();
    }

</script>
