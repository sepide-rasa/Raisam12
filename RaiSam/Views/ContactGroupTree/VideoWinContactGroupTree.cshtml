@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoContactGroupTree()")
          .Height(565)
         .Width(1000)
                         .ID("VideoContactGroupTree")
        .Closable(true)
            .Title("راهنمای تصویری ساختار درختی گروه تماس")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoContactGroupTree" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoContactGroupTree", "ContactGroupTree")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoContactGroupTree() {
        $('#AmozeshVideoContactGroupTree')[0].pause();
    }

</script>
