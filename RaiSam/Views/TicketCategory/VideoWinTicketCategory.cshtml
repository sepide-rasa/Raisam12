@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoTicketCategory()")
             .Height(565)
         .Width(1000)
                    .ID("VideoTicketCategory")
        .Closable(true)
            .Title("راهنمای تصویری موضوع گفتگو")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoTicketCategory" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoTicketCategory", "TicketCategory")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoTicketCategory() {
        $('#AmozeshVideoTicketCategory')[0].pause();
    }

</script>
