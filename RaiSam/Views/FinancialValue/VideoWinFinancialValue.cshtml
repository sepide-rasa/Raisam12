@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoFinancialValue()")
             .Height(565)
         .Width(1000)
                            .ID("VideoFinancialValue")
        .Closable(true)
            .Title("راهنمای تصویری ارزش مالی سرمایه گذاری")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoFinancialValue" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoFinancialValue", "FinancialValue")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoFinancialValue() {
        $('#AmozeshVideoFinancialValue')[0].pause();
    }

</script>
