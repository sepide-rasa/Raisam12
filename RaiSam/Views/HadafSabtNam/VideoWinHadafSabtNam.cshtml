@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoHadafSabtNam()")
             .Height(565)
         .Width(1000)
                        .ID("VideoHadafSabtNam")
        .Closable(true)
            .Title("راهنمای تصویری هدف ثبت نام")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoHadafSabtNam" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoHadafSabtNam", "HadafSabtNam")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoHadafSabtNam() {
        $('#AmozeshVideoHadafSabtNam')[0].pause();
    }

</script>
