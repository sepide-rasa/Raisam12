@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoScheduleTitle()")
             .Height(565)
         .Width(1000)
                        .ID("VideoScheduleTitle")
        .Closable(true)
            .Title("راهنمای تصویری عناوین برنامه ریزی")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoScheduleTitle" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoScheduleTitle", "ScheduleTitle")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoScheduleTitle() {
        $('#AmozeshVideoScheduleTitle')[0].pause();
    }

</script>
