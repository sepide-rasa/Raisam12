@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoErja()")
          .Height(565)
         .Width(1000)
                 .ID("VideoErja")
        .Closable(true)
            .Title("راهنمای تصویری ارجاع")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoErja" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoWinErja", "Erja")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoErja() {
        $('#AmozeshVideoErja')[0].pause();
    }

</script>
