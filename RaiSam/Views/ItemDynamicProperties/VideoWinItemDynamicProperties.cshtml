@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoItemDynamicProperties()")
             .Height(565)
         .Width(1000)
                        .ID("VideoItemDynamicProperties")
        .Closable(true)
            .Title("راهنمای تصویری خواص مدارک داینامیک")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoItemDynamicProperties" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoItemDynamicProperties", "ItemDynamicProperties")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoItemDynamicProperties() {
        $('#AmozeshVideoItemDynamicProperties')[0].pause();
    }

</script>
