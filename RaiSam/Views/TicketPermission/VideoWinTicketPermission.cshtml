@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoTicketPermission()")
             .Height(565)
         .Width(1000)
                    .ID("VideoTicketPermission")
        .Closable(true)
            .Title("راهنمای تصویری دسترسی گفتگوها")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoTicketPermission" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoTicketPermission", "TicketPermission")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoTicketPermission() {
        $('#AmozeshVideoTicketPermission')[0].pause();
    }

</script>
