@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoContactType()")
          .Height(565)
         .Width(1000)
                 .ID("VideoContactType")
        .Closable(true)
            .Title("راهنمای تصویری نوع تماس")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoContactType" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoContactType", "ContactType")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoContactType() {
        $('#AmozeshVideoContactType')[0].pause();
    }

</script>
