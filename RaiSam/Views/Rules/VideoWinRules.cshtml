@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoRules()")
             .Height(565)
         .Width(1000)
                .ID("VideoRules")
        .Closable(true)
            .Title("راهنمای تصویری قوانین چرخه")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoRules" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoRules", "Rules")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoRules() {
        $('#AmozeshVideoRules')[0].pause();
    }

</script>
