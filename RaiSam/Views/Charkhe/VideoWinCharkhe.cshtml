@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoCharkhe()")
             .Height(565)
         .Width(1000)
                .ID("VideoCharkhe")
        .Closable(true)
            .Title("راهنمای تصویری چرخه")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoCharkhe" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoCharkhe", "Charkhe")' type type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoCharkhe() {
        $('#AmozeshVideoCharkhe')[0].pause();
    }

</script>
