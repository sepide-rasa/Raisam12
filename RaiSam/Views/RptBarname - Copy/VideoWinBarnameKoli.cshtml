@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoBarnameKoli()")
          .Height(565)
         .Width(1000)
             .ID("VideoBarnameKoli")
        .Closable(true)
            .Title("راهنمای تصویری گزارش کلی بارنامه ها")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoBarnameKoli" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoBarnameKoli", "RptBarname")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoBarnameKoli() {
        $('#AmozeshVideoBarnameKoli')[0].pause();
    }

</script>
