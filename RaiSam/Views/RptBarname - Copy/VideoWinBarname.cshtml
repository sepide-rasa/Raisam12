@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoBarname()")
          .Height(565)
         .Width(1000)
             .ID("VideoBarname")
        .Closable(true)
            .Title("راهنمای تصویری گزارش بارنامه ها")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoBarname" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoBarname", "RptBarname")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoBarname() {
        $('#AmozeshVideoBarname')[0].pause();
    }

</script>
