@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoSpecificCartablePer()")
          .Height(565)
         .Width(1000)
                 .ID("VideoSpecificCartablePer")
        .Closable(true)
                .Title("راهنمای تعیین دسترسی کارتابل تخصصی")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoSpecificCartablePer" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoSpecificCartablePer", "SpecificCartablePermission_UserGroup")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoSpecificCartablePer() {
        $('#AmozeshVideoSpecificCartablePer')[0].pause();
    }

</script>
