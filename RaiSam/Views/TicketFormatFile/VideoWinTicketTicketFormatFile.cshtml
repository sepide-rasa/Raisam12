@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoTicketFormatFile()")
             .Height(565)
         .Width(1000)
                        .ID("VideoTicketFormatFile")
        .Closable(true)
            .Title("راهنمای تصویری فرمت های مجاز تیکت")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoTicketFormatFile" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoTicketFormatFile", "TicketFormatFile")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoTicketFormatFile() {
        $('#AmozeshVideoTicketFormatFile')[0].pause();
    }

</script>
