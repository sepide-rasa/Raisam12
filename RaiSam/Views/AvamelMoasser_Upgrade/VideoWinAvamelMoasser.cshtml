@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoAvamelMoasser()")
             .Height(565)
         .Width(1000)
            .ID("VideoUserGroup")
        .Closable(true)
                .Title("راهنمای تصویری عوامل موثر بر چرخه")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoAvamelMoasser" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoAvamelMoasser", "AvamelMoasser_Upgrade")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoAvamelMoasser() {
        $('#AmozeshVideoAvamelMoasser')[0].pause();
    }

</script>
