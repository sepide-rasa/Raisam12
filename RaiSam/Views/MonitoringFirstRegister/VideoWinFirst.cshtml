@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoFirst()")
          .Height(565)
         .Width(1000)
             .ID("VideoFirst")
        .Closable(true)
            .Title("راهنمای تصویری مانیتورینگ ثبت نام اولیه")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoFirst" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoFirst", "MonitoringFirstRegister")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoFirst() {
        $('#AmozeshVideoFirst')[0].pause();
    }

</script>
