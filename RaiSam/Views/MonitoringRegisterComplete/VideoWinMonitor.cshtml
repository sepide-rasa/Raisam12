@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoMonitor()")
          .Height(565)
         .Width(1000)
             .ID("VideoMonitor")
        .Closable(true)
            .Title("راهنمای تصویری مانیتورینگ تکمیل ثبت نامی ها")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoMonitor" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoMonitor", "MonitoringRegisterComplete")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoMonitor() {
        $('#AmozeshVideoMonitor')[0].pause();
    }

</script>
