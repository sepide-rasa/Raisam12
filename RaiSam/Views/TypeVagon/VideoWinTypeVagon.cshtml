@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoTypeVagon()")
             .Height(565)
         .Width(1000)
                        .ID("VideoTypeVagon")
        .Closable(true)
            .Title("راهنمای تصویری انواع واگن")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoTypeVagon" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoTypeVagon", "TypeVagon")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoTypeVagon() {
        $('#AmozeshVideoTypeVagon')[0].pause();
    }

</script>
