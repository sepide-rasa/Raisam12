@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoOperation()")
             .Height(565)
         .Width(1000)
              .ID("VideoOperation")
        .Closable(true)
            .Title("راهنمای تصویری تعریف اکشن")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoOperation" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoOperation", "Operation")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoOperation() {
        $('#AmozeshVideoOperation')[0].pause();
    }

</script>
