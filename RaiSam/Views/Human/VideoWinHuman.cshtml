@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoHuman()")
          .Height(565)
         .Width(1000)
             .ID("VideoHuman")
        .Closable(true)
            .Title("راهنمای تصویری اشخاص")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoHuman" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoHuman", "Human")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoHuman() {
        $('#AmozeshVideoHuman')[0].pause();
    }

</script>
