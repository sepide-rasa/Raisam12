@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoItemsDynamicRating()")
             .Height(565)
         .Width(1000)
                        .ID("VideoItemsDynamicRating")
        .Closable(true)
                .Title("راهنمای تصویری مدارک حوزه های سرمایه گذاری")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoItemsDynamicRating" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoItemsDynamicRating", "ItemsDynamicRating")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoItemsDynamicRating() {
        $('#AmozeshVideoItemsDynamicRating')[0].pause();
    }

</script>
