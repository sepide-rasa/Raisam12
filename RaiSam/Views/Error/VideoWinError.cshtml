@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;
@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoError()")
          .Height(565)
         .Width(1000)
                             .ID("VideoError")
        .Closable(true)
            .Title("راهنمای تصویری بررسی خطا")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoError" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoError", "Error")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoError() {
        $('#AmozeshVideoError')[0].pause();
    }

</script>
