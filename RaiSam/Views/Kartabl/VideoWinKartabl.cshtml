@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoKartabl()")
          .Height(565)
         .Width(1000)
         .ID("VideoKartabl")
        .Closable(true)
            .Title("راهنمای تصویری تعریف کارتابل")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoKartabl" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoKartabl", "Kartabl")' typ type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoKartabl() {
        $('#AmozeshVideoKartabl')[0].pause();
    }

</script>
