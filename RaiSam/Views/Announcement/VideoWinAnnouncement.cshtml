@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoAnnouncement()")
             .Height(565)
         .Width(1000)
                    .ID("VideoAnnouncement")
        .Closable(true)
            .Title("راهنمای تصویری اطلاعیه")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoAnnouncement" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoAnnouncement", "Announcement")' ty type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoAnnouncement() {
        $('#AmozeshVideoAnnouncement')[0].pause();
    }

</script>
