@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoAction()")
             .Height(565)
         .Width(1000)
                .ID("VideoAction")
        .Closable(true)
            .Title("راهنمای تصویری اقدامات")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoAction" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoAction", "Actions")' type type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoAction() {
        $('#AmozeshVideoAction')[0].pause();
    }

</script>
