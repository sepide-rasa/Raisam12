@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoTitleRatingDynamic()")
             .Height(565)
         .Width(1000)
                        .ID("VideoTitleRatingDynamic")
        .Closable(true)
            .Title("راهنمای تصویری عناوین مدارک داینامیک")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoTitleRatingDynamic" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoTitleRatingDynamic", "TitleRatingDynamic")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoTitleRatingDynamic() {
        $('#AmozeshVideoTitleRatingDynamic')[0].pause();
    }

</script>
