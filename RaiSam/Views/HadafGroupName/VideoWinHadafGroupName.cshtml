@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@{
    var X = Html.X();
}

@using Ext.Net.MVC;

@(
 Html.X().Window().Listeners(l => l.BeforeClose.Handler = "CloseVideoHadafGroupName()")
             .Height(565)
         .Width(1000)
                        .ID("VideoHadafGroupName")
        .Closable(true)
            .Title("راهنمای تصویری گروه بندی هدف ثبت نام")
        .AutoScroll(true)
        .Closable(true)
            .Maximizable(true)
        .Content(@<video width="100%;" id="AmozeshVideoHadafGroupName" controls="true" autoplay="true" controls><source src='@Url.Action("DownloadFileVideoHadafGroupName", "HadafGroupName")' type="video/mp4"></video>)

)
<script type="text/javascript">
    function CloseVideoHadafGroupName() {
        $('#AmozeshVideoHadafGroupName')[0].pause();
    }

</script>
